<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="data" type="com.example.splmeet_search.SearchData"/>
    </data>


    <LinearLayout
        android:id="@+id/linearRow42000"
        style="@style/groupStylebluegray_100_7fcornerRadius"
        android:layout_width="370dp"
        android:layout_height="190dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="@dimen/_14pxv"
        android:layout_marginEnd="9dp"
        android:gravity="start"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageImageTwelve"
            android:layout_width="@dimen/_120pxh"
            android:layout_height="@dimen/_160pxh"
            android:layout_marginStart="@dimen/_8pxh"
            android:layout_marginTop="@dimen/_7pxv"
            android:layout_marginBottom="@dimen/_11pxv"
            android:scaleType="fitXY"
            android:src="@drawable/img_image12_140x120"
            tools:ignore="ContentDescription"
            tools:src="@drawable/img_image12_140x120" />

        <LinearLayout
            android:id="@+id/linearColumn20230701"
            android:layout_width="200dp"
            android:layout_height="182dp"
            android:layout_marginStart="@dimen/_10pxh"
            android:layout_marginTop="@dimen/_3pxv"
            android:layout_marginEnd="@dimen/_11pxh"
            android:layout_marginBottom="@dimen/_9pxv"
            android:layout_weight="0.61"
            android:gravity="start"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearRow20230701"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:orientation="horizontal">


                <FrameLayout
                    android:id="@+id/frameStack20230701"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TextView
                        android:id="@+id/date"
                        style="@style/txtPretendardmedium155"
                        android:layout_width="131dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginStart="@dimen/_3pxh"
                        android:layout_marginBottom="@dimen/_5pxv"
                        android:ellipsize="end"
                        android:gravity="top|start"
                        android:singleLine="true"
                        tools:ignore="TextSizeCheck"
                        android:text="@{data.date}"
                        tools:text="날짜"/>

                    <TextView
                        android:id="@+id/place"
                        style="@style/txtPretendardbold23"
                        android:layout_width="96dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|start"
                        android:layout_marginTop="@dimen/_5pxv"
                        android:layout_marginEnd="@dimen/_10pxh"
                        android:ellipsize="end"
                        android:gravity="top|start"
                        android:lineSpacingExtra="@dimen/_4pxh"
                        android:singleLine="true"
                        android:text="@{data.place}"
                        tools:text="장소"/>

                    <ImageButton
                        android:id="@+id/xwindow"
                        android:layout_width="40dp"
                        android:layout_height="@dimen/_40pxh"
                        android:layout_marginLeft="@dimen/_185pxh"

                        android:background="@android:color/transparent"
                        android:padding="0sp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/add"
                        tools:ignore="ContentDescription"
                        tools:src="@drawable/add" />

                </FrameLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/price"
                style="@style/txtIntersemibold15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_1pxh"
                android:layout_marginTop="@dimen/_4pxv"
                android:layout_marginEnd="@dimen/_10pxh"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@{data.price}"
                tools:text="가격"/>

            <ImageButton
                android:id="@+id/imageArrowright"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_22pxh"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/_60pxv"
                android:layout_marginRight="@dimen/_5pxh"
                android:background="@android:color/transparent"
                android:padding="0sp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_arrowright"
                tools:ignore="ContentDescription"
                tools:src="@drawable/img_arrowright" />

        </LinearLayout>
    </LinearLayout>

</layout>
